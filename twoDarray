public class Main {
    public static void main(String[] args) {
        int[][] twoDArray = {
            {1, 2, 3},
            {4, 5, 6},
            {7, 8, 9}
        };

        // Display the array
        System.out.println("Original Array:");
        displayArray(twoDArray);

        // Display the principal diagonal
        System.out.println("\nPrincipal Diagonal:");
        displayPrincipalDiagonal(twoDArray);
    }

    public static void displayArray(int[][] array) {
        for (int[] row : array) {
            for (int element : row) {
                System.out.print(element + " ");
            }
            System.out.println();
        }
    }

    public static void displayPrincipalDiagonal(int[][] array) {
        for (int i = 0; i < array.length; i++) {
            System.out.print(array[i][i] + " ");
        }
        System.out.println();
    }
}
